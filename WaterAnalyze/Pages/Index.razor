@page "/"
@using Microsoft.JSInterop
@inject IJSRuntime JSRuntime

<PageTitle>Главная</PageTitle>

<MudCard Style="width: 70%; height: 30%;display: block;margin-left: auto;margin-right: auto;  box-shadow: rgb(38, 57, 77) 0px 20px 30px -10px;">
	<div id="map"></div>
</MudCard>

@code {
    // После того как все элементы DOM веб страницы загружены...

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await JSRuntime.InvokeVoidAsync("startmap", null);
        }
    }

}

<style>
    #map {
        width: 1100px;
        height: 600px;
        padding: 0;
        margin-top: 2%;
        display: block;
        margin-left: auto;
        margin-right: auto;
    }
</style>
